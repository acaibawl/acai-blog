generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ConnectionTest {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique

  @@map("connection_test")
}

model Article {
  id             Int      @id @default(autoincrement())
  title          String
  thumbnail_url  String?
  main_image_url String?
  body           String
  created_at     DateTime @default(now())
  updated_at     DateTime @default(now()) @updatedAt

  @@map("article")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  password   String
  last_login DateTime?
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("user")
}
